/* Buzz */
@-webkit-keyframes hvr-buzz {
  50% {
    -webkit-transform: translateX(3px) rotate(2deg);
    transform: translateX(3px) rotate(2deg);
  }
  100% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
    transform: translateX(-3px) rotate(-2deg);
  }
}
@keyframes hvr-buzz {
  50% {
    -webkit-transform: translateX(3px) rotate(2deg);
    transform: translateX(3px) rotate(2deg);
  }
  100% {
    -webkit-transform: translateX(-3px) rotate(-2deg);
    transform: translateX(-3px) rotate(-2deg);
  }
}

/* Apply hvr-buzz styles to .macro-button inside .companion-selected-bigbutton */
.companion-selected-bigbutton .macro-button {
    -webkit-transform: perspective(1px) translateZ(0);
    transform: perspective(1px) translateZ(0);
    box-shadow: 0 0 1px transparent; /* Changed from rgba(0, 0, 0, 0) for clarity */
    -webkit-animation-name: none;
    animation-name: none;
    -webkit-animation-duration: 0.15s;
    animation-duration: 0.15s;
    -webkit-animation-timing-function: linear;
    animation-timing-function: linear;
}

/* Apply hvr-buzz hover effects to .macro-button */
.companion-selected-bigbutton .macro-button:hover{
    -webkit-animation-name: hvr-buzz;
    animation-name: hvr-buzz;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
}

/* Reset the animation when not hovering or focusing */
.companion-selected-bigbutton .macro-button:not(:hover):not(:focus) {
    -webkit-animation-name: none;
    animation-name: none;
}



